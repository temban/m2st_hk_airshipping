<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_travel_booking_form" model="ir.ui.view">
            <field name="name">publicity.form</field>
            <field name="model">m2st_hk_airshipping.travel_booking</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                          <group>
                            <group>
                            <field name="sender_id"/>
                            </group>
                            <group>
                            <field name="travel_id"/>
                            </group>
                            <group>
                            <field name="receiver_partner_id"/>
                            </group>
                            </group>
                        <group>
                            <group>
                            <field name="receiver_name"/>
                            <field name="receiver_email"/>
                            <field name="receiver_phone"/>
                            <field name="receiver_address"/>
                            <field name="type_of_luggage"/>
                            </group>
                            <group>
                             <field name="status"/>
                            <field name="kilo_booked"/>
                            <field name="kilo_booked_price"/>
                            <field name="disable"/>
                            <field name="code"/>
                            </group>
                        </group>
                        <group>
                                <field name="luggage_image" widget="image" options='{"size": [800, 500]}'/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


        <!-- Tree View -->
        <record id="view_travel_booking_tree" model="ir.ui.view">
            <field name="name">travel.booking.tree</field>
            <field name="model">m2st_hk_airshipping.travel_booking</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="sender_id"/>
                    <field name="travel_id"/>
                    <field name="receiver_partner_id"/>
                    <field name="status"/>
                    <field name="code"/>
                    <field name="type_of_luggage"/>

                </tree>
            </field>
        </record>

        <!-- Action -->
        <record id="action_travel_booking" model="ir.actions.act_window">
            <field name="name">Travel Bookings</field>
            <field name="res_model">m2st_hk_airshipping.travel_booking</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_travel_booking" name="HubKilo Booking" action="action_travel_booking"/>
    </data>
</odoo>

