<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
<!-- tree view -->
<record id="view_m2st_hk_airshipping_message_tree" model="ir.ui.view">
    <field name="name">m2st_hk_airshipping.message.tree</field>
    <field name="model">m2st_hk_airshipping.message</field>
    <field name="arch" type="xml">
        <tree>
            <field name="travel_booking_id"/>
            <field name="sender_id"/>
            <field name="receiver_id"/>
            <field name="message"/>
            <field name="date"/>
        </tree>
    </field>
</record>

<!-- form view -->
<record id="view_m2st_hk_airshipping_message_form" model="ir.ui.view">
    <field name="name">m2st_hk_airshipping.message.form</field>
    <field name="model">m2st_hk_airshipping.message</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="travel_booking_id"/>
                    <field name="sender_id"/>
                    <field name="receiver_id"/>
                    <field name="message"/>
                    <field name="date"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

                <!-- Action -->
        <record id="action_messaging" model="ir.actions.act_window">
            <field name="name">Travel Booking Negotiation</field>
            <field name="res_model">m2st_hk_airshipping.message</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu -->

        <!-- Menu -->
        <menuitem id="menu_messaging" name="HubKilo Booking Negotiation" action="action_messaging"/>
    </data>
</odoo>

